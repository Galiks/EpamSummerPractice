@model List<GetAwardFromUser_Award_Result>
@{
    ViewBag.Title = "ShowAwards";
}

<h2>ShowAwards</h2>

<p>
    @Html.ActionLink("Главное меню пользователя", "HomePage")
</p>

<table class="table">
    <tr>
        <th>
            ID
        </th>

        <th>
            Title
        </th>

        <th>
            Image
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_award)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                <a href="@Url.Action("Details", "Awards", new { id = item.id_award })">
                    @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                    + Convert.ToBase64String(item.AwardImage) + "\" />")
                            </a>
            </td>
            
        </tr>
    }

</table>
